<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActfbActivity">

    <TextView
        android:id="@+id/fbtv1"
        style="@style/textViewStyle"
        android:text="Firebase Operations"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/fbbadd"
        style="@style/buttonStyle"
        android:text="Add Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fbtv1"
        />

    <Button
        android:id="@+id/fbbdelete"
        style="@style/buttonStyle"
        android:text="Delete Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fbbadd"
        />

    <Button
        android:id="@+id/fbbupdate"
        style="@style/buttonStyle"
        android:text="Update Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fbbdelete"
        />

    <Button
        android:id="@+id/bsearch"
        style="@style/buttonStyle"
        android:text="Search Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fbbupdate"
        />
</androidx.constraintlayout.widget.ConstraintLayout>