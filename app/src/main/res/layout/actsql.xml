<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActfbActivity">

    <TextView
        android:id="@+id/sqltv1"
        style="@style/textViewStyle"
        android:text="SQLite Operations"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/sqlbadd"
        style="@style/buttonStyle"
        android:text="Add Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqltv1"
        android:drawableEnd="@drawable/addrecord"
        />

    <Button
        android:id="@+id/sqlbdelete"
        style="@style/buttonStyle"
        android:text="Delete Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlbadd"
        />

    <Button
        android:id="@+id/sqlbupdate"
        style="@style/buttonStyle"
        android:text="Update Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sqlbdelete"
        />

    <Button
        android:id="@+id/sqlbsearch"
        style="@style/buttonStyle"
        android:text="Search Book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sqlbupdate"
        />
</androidx.constraintlayout.widget.ConstraintLayout>